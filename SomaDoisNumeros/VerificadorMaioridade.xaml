<Window x:Class="SomaDoisNumeros.VerificadorMaioridade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verificador de Maioridade" Height="180" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 5">
            <Label Content="Idade:" Width="80"/>
            <TextBox x:Name="txtIdade" Width="200"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Voltar ao Menu" Width="120" HorizontalAlignment="Left" Margin="0 5"
                Click="BtnVoltar_Click"/>

        <Button Grid.Row="1" Content="Verificar" Width="100" HorizontalAlignment="Right" Margin="0 5"
                Click="BtnVerificar_Click"/>
    </Grid>
</Window>
