<Window x:Class="SomaDoisNumeros.VerificarDiaSemana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verificar Dia da Semana" Height="180" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 5">
            <Label Content="Selecione uma data:" Width="130"/>
            <DatePicker x:Name="dateSelecionada" Width="180"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Voltar ao Menu" Width="120" HorizontalAlignment="Left" Margin="0 5"
                Click="BtnVoltar_Click"/>

        <Button Grid.Row="1" Content="Verificar" Width="100" HorizontalAlignment="Right" Margin="0 5"
                Click="BtnVerificar_Click"/>
    </Grid>
</Window>
