<Window x:Class="SomaDoisNumeros.ConversorTemperatura"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conversor de Temperatura" Height="200" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 5" VerticalAlignment="Center">
            <Label Content="Celsius:" Width="80"/>
            <TextBox x:Name="txtCelsius" Width="200"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Converter" Width="100" HorizontalAlignment="Right" Margin="0 5"
                Click="BtnConverter_Click"/>

        <Button Grid.Row="1" Content="Voltar ao Menu" Width="120" HorizontalAlignment="Left" Margin="0 5"
                Click="BtnVoltar_Click"/>
    </Grid>
</Window>
