<Window x:Class="SomaDoisNumeros.DiasParaAniversario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dias até o Aniversário" Height="200" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 5">
            <Label Content="Data de Nascimento:" Width="130"/>
            <DatePicker x:Name="dateNascimento" Width="180"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Calcular" Width="100" HorizontalAlignment="Right" Margin="0 5"
                Click="BtnCalcular_Click"/>

        <Button Grid.Row="1" Content="Voltar ao Menu" Width="120" HorizontalAlignment="Left" Margin="0 5"
                Click="BtnVoltar_Click"/>
    </Grid>
</Window>
