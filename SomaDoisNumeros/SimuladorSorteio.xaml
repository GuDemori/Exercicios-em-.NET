<Window x:Class="SomaDoisNumeros.SimuladorSorteio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulador de Sorteio" Height="150" Width="320">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Content="Voltar ao Menu" Width="120" HorizontalAlignment="Left" Margin="0 5"
                Click="BtnVoltar_Click"/>

        <Button Grid.Row="0" Content="Sortear" Width="100" HorizontalAlignment="Right" Margin="0 5"
                Click="BtnSortear_Click"/>
    </Grid>
</Window>
